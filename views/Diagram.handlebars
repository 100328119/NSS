<style type="text/css">
  #mynetwork {
    width: 100%;
    height: 500px;
    border: 1px solid lightgray;
  }
</style>
<div ng-controller="diagram" ng-init="DiagramInit()">
  <ol class="breadcrumb">
  	<li class="breadcrumb-item">
  		<a href="/Network/{[{Network.network_info.id}]}">{[{Network.network_info.N_Name}]}</a>
  	</li>
  	<li class="breadcrumb-item active">Network Diagram</li>
  </ol>
  	 <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  			<h2 class="h2">#{[{Network.network_info.N_Number}]} - {[{Network.network_info.N_Name}]}   {[{Network.network_info.Category}]}</h2>
        <h2 style="background-color:red;color:white; width: 237px; height: 40px; text-align: center;">CONFIDENTIAL</h2>
        <img src="/img/LDBLogo.png" width="200px">
  		</div>
  		<hr>
  <div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Network Topology
    </div>
  <div class="card-body" >
    <div class="row">
  		<div class = "col-lg-6" >
      <div id="mynetwork"></div>
    </div>
    <div class = "col-lg-6">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm" id="VLANTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>VlAN</th>
              <th>description</th>
              <th>Gateway</th>
              <th>Subnet</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="vlan in Network.VlanNetwork  | filter:{Status:'!-1'}">
              <td>{[{vlans[vlan.vlan_id-1].vlan_number}]}</td>
              <td>{[{vlans[vlan.vlan_id-1].Description}]}</td>
              <td>{[{vlan.Gateway}]}</td>
              <td>{[{vlan.Submusk}]}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
    </div>
  <div class="table-responsive col-lg-12">
    <table class="table table-striped table-bordered table-hover table-sm" id="WANTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Provider</th>
          <th>WAN Type</th>
          <th>Upload</th>
          <th>DownLoad</th>
          <th>UploadShaping</th>
          <th>WAN Network</th>
          <th>WAN IP</th>
          <th>ADSL/OOB</th>
          <th>LOC ID</th>
          <th>ASSET TAG</th>
          <th>CSID</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="WAN in Network.WANs | filter:{Status:'!-1'}">
          <td>{[{WAN.Provider}]}</td>
          <td>{[{WAN.WAN_Type}]}</td>
          <td>{[{WAN.Upload}]}</td>
          <td>{[{WAN.DownLoad}]}</td>
          <td>{[{WAN.UploadShaping}]}</td>
          <td>{[{WAN.WAN_Network}]}</td>
          <td>{[{WAN.WAN_IP}]}</td>
          <td>{[{WAN.ADSL_OOB}]}</td>
          <td>{[{WAN.LOC_ID}]}</td>
          <td>{[{WAN.ASSET_TAG}]}</td>
          <td>{[{WAN.CSID}]}</td>
      </tbody>
    </table>
  </div>
</div>
</div>
<script type="text/javascript" src="/vendor/VisJs/vis.min.js"></script>
<link href="/vendor/VisJs/vis-network.min.css" rel="stylesheet"/>
<script type="text/JavaScript" src="/js/Network/net_diagram.js"></script>
