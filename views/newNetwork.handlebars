<div ng-app="NewSite" ng-controller="NewSiteController">
  <ol class="breadcrumb">
  	<li class="breadcrumb-item">
  		<a href="#">Network</a>
  	</li>
  	<li class="breadcrumb-item active">NewSite</li>
  </ol>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1>New Network</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
            <button class="btn btn-sm btn-outline-secondary" ng-click="SaveNewSite()">Save</button>
            <button class="btn btn-sm btn-outline-secondary">Cancel</button>
          </div>
        </div>
  </div>
 <hr>
<div class="card mb-3">
   <div class="card-header">Network Information
     <div class="btn-group pull-right" role="group">
       <button id="btnGroupDrop1" type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         BCLS Template
       </button>
       <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
         <a class="dropdown-item" ng-click ="getTemplate()">BCLS</a>
         <a class="dropdown-item" href="#">BCCS</a>
       </div>
     </div>
   </div>
   <div class="card-body">
     <form>
       <div class="form-group">
         <div class="form-row">
           <div class="col-md-3">
             <label for="NetworkName">Network Name</label>
             <input class="form-control" id="NetworkName" type="text" aria-describedby="nameHelp" placeholder="Enter Network Name" ng-model="NewSite.N_name">
           </div>
           <div class="col-md-3">
             <label for="NetworkNumber">Network Number</label>
             <input class="form-control" id="NetworkNumber" type="number" aria-describedby="nameHelp" placeholder="Enter Network Number" ng-model="NewSite.ID">
           </div>
           <div class="col-md-3">
             <label for="Category">Category</label>
             <select class="form-control" ng-model ="NewSite.Category">
                <option >BCLS</option>
                <option>BCCS</option>
            </select>
           </div>
           <div class="col-md-3">
             <label for="Class">Class</label>
             <select class="form-control" ng-model="NewSite.Class">
                <option>Class A Signature</option>
                <option>Class A</option>
                <option>Class B</option>
                <option>Class C</option>
            </select>
           </div>
           </div>
         </div>
       <div class="form-group">
         <div class="form-row">
           <div class="col-md-4">
             <label for="Circuit_ID">Circuit ID</label>
             <input class="form-control" id="Circuit_ID" type="number" placeholder="Contact Number" ng-model="NewSite.Circuit_ID">
           </div>
           <div class="col-md-4">
             <label for="PhoneNumber">Phone Number</label>
             <input class="form-control" id="PhoneNumber" type="number" placeholder="Contact Number" ng-model="NewSite.Phone">
           </div>
           <div class="col-md-4">
             <label for="FaxNumber">Fax Number</label>
             <input class="form-control" id="FaxNumber" type="numbers" placeholder="Fax number" ng-model="NewSite.Fax">
           </div>
         </div>
       </div>
       <div class="form-group">
         <div class="form-row">
          <div class ="col-md-8">
            <label for="Address">Address</label>
            <input class="form-control" id="Address" type="address" aria-describedby="emailHelp" placeholder="Enter Address" ng-model="NewSite.address">
         </div>
         <div class="col-md-4">
           <label for="PostalCode">Postal Code</label>
           <input class="form-control" id="PostalCode" type="text" aria-describedby="nameHelp" placeholder="Enter Postal Code" ng-model="NewSite.Postal_Code">
         </div>
       </div>
      </div>
     </form>
   </div>
 </div>
  <div class="card mb-3">
 		<div class="card-header">
 			<i class="fa fa-table"></i> End Device
 			<button class="btn btn-primary btn-sm pull-right" type="button" ng-click="NewEndDevice()">New</button>
 			</div>
 		<div class="card-body">
 			<div class="table-responsive">
 				<table class="table table-striped table-bordered table-hover table-sm" id="new_End_Table" width="100%" cellspacing="0">
 					<thead>
 						<tr>
 							<th>IP</th>
 							<th>Device Name</th>
 							<th>VLAN</th>
 							<th>Port</th>
 							<th>Active</th>
 							<th>Description</th>
 							<th>Type</th>
 							<th>Make</th>
 							<th>Model</th>
 							<th>Connected Device</th>
              <th>Action</th>
 						</tr>
 					</thead>
 					<tbody>
            <tr ng-repeat="EndDevice in End_Device ">
              <td><input type="text" class="form-control"  placeholder="IP" ng-model="EndDevice.IP"></td>
              <td><input type="text" class="form-control" placeholder="Device" ng-model="EndDevice.Device_Name"></td>
              <td><input type="text" class="form-control" placeholder="VLAN" ng-model="EndDevice.VLAN"></td>
              <td><input type="text" class="form-control" placeholder="Port" ng-model="EndDevice.Port"></td>
              <td><input type="text" class="form-control" placeholder="Active" ng-model="EndDevice.Active"></td>
              <td><input type="text" class="form-control" placeholder="Description" ng-model="EndDevice.Description"></td>
              <td><input type="text" class="form-control" placeholder="Type" ng-model="EndDevice.Type"></td>
              <td><input type="text" class="form-control" placeholder="Make" ng-model="EndDevice.Make"></td>
              <td><input type="text" class="form-control" placeholder="Model" ng-model="EndDevice.Model"></td>
              <td><input type="text" class="form-control" placeholder="Connected Device" ng-model="EndDevice.Connected_Device"></td>
              <td>
                <button class="btn btn-default btn-sm"  type="button" ng-click="CloneEndDevice(EndDevice)"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                <button class="btn btn-danger btn-sm" type="button" ng-click="RemoveEndDevice(EndDevice)"><i class="fa fa-trash" aria-hidden="true"></i></button>
              </td>
            </tr>
 					</tbody>
 				</table>
 			</div>
 		</div>
 	</div>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fa fa-table"></i> WAN
      	<button class="btn btn-primary btn-sm pull-right" type="button" ng-click="NewWAN()">New</button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm" id="WANTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Provider</th>
              <th>WAN Type</th>
              <th>Upload</th>
              <th>DownLoad</th>
              <th>UploadShaping</th>
              <th>WAN Network</th>
              <th>WAN IP</th>
              <th>ADSL/OOB</th>
              <th>LOC ID</th>
              <th>ASSET TAG</th>
              <th>CSID</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="NewWAN in NewWANs">
              <td><input type="text" class="form-control" placeholder="IP" ng-model="NewWAN.Provider"></td>
              <td><input type="text" class="form-control" placeholder="Device" ng-model="NewWAN.WAN_Type"></td>
              <td><input type="text" class="form-control" placeholder="VLAN" ng-model="NewWAN.Upload"></td>
              <td><input type="text" class="form-control" placeholder="Port" ng-model="NewWAN.Download"></td>
              <td><input type="text" class="form-control" placeholder="Active" ng-model="NewWAN.UploadShaping"></td>
              <td><input type="text" class="form-control" placeholder="Description" ng-model="NewWAN.WAN_Network"></td>
              <td><input type="text" class="form-control" placeholder="Type" ng-model="NewWAN.WAN_IP"></td>
              <td><input type="text" class="form-control" placeholder="Make" ng-model="NewWAN.ADSL_OOB"></td>
              <td><input type="text" class="form-control" placeholder="Model" ng-model="NewWAN.LOC_ID"></td>
              <td><input type="text" class="form-control" placeholder="Connected Device" ng-model="NewWAN.ASSET_TAG"></td>
              <td><input type="text" class="form-control" placeholder="Connected Device" ng-model="NewWAN.CSID"></td>
              <td>
                <button class="btn btn-default btn-sm"  type="button" ng-click="CloneWAN(NewWAN)"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                <button class="btn btn-danger btn-sm" type="button" ng-click="RemoveWAN(NewWAN)"><i class="fa fa-trash" aria-hidden="true"></i></button>
              </td>
              <tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class = "col-lg-6" >
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Router/Switch
          	<button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#myModalDelete" ng-click="NewNetDevice()">New</button>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-sm" id="NDeviceTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Type</th>
                  <th>Name</th>
                  <th>Loopback</th>
                  <th>Make</th>
                  <th>Model</th>
                  <th>Serial Number</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat = "NewNetDevice in NewNetDevices">
                  <td><input type="text" class="form-control" placeholder="IP" ng-model="NewNetDevice.type"></td>
                  <td><input type="text" class="form-control" placeholder="Device" ng-model="NewNetDevice.Name"></td>
                  <td><input type="text" class="form-control" placeholder="VLAN" ng-model="NewNetDevice.Loopback"></td>
                  <td><input type="text" class="form-control" placeholder="Port" ng-model="NewNetDevice.Make"></td>
                  <td><input type="text" class="form-control" placeholder="Active" ng-model="NewNetDevice.Model"></td>
                  <td><input type="text" class="form-control" placeholder="Description" ng-model="NewNetDevice.Serial"></td>
                  <td>
                    <button class="btn btn-default btn-sm"  type="button" ng-click="CloneNetDevice(NewNetDevice)"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                    <button class="btn btn-danger btn-sm" type="button" ng-click="RemoveNetDevice(NewNetDevice)"><i class="fa fa-trash" aria-hidden="true"></i></button>
                  </td>
                <tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class = "col-lg-6" >
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> VLANS
          	<button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#myModalDelete" ng-click="NewVLAN()">New</button>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-sm" id="VLANTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>VlAN</th>
                  <th>description</th>
                  <th>Gateway</th>
                  <th>Subnet</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat = "NewVLAN in NewVLANs">
                  <td><input type="text" class="form-control" placeholder="IP" ng-model="NewVLAN.VLAN"></td>
                  <td><input type="text" class="form-control" placeholder="Device" ng-model="NewVLAN.Description"></td>
                  <td><input type="text" class="form-control" placeholder="VLAN" ng-model="NewVLAN.Gateway"></td>
                  <td><input type="text" class="form-control" placeholder="Port" ng-model="NewVLAN.Subnet"></td>
                  <td>
                    <button class="btn btn-default btn-sm"  type="button" ng-click="CloneVLAN(NewVLAN)"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                    <button class="btn btn-danger btn-sm" type="button" ng-click="RemoveVLAN(NewVLAN)"><i class="fa fa-trash" aria-hidden="true"></i></button>
                  </td>
                <tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.2/angular.min.js"></script>
  <script type="text/JavaScript" src="/js/Network/NewSite.js"></script>
