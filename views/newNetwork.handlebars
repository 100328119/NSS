      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> VLANS
          	<button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#myModalDelete" ng-click="NewVLAN()">New</button>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover table-sm" id="VLANTable" width="100%" cellspacing="0">
