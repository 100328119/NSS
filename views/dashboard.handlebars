<div ng-controller="dashController" ng-init="DashInit()">
  <ol class="breadcrumb">
  	<li class="breadcrumb-item">
  		<a href="#">Dashboard</a>
  	</li>
  	<li class="breadcrumb-item active">Dashboard</li>
  </ol>
<h1>Dashboard</h1>
<hr>
<div class="row">
  <div class = "col-lg-8" >
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> Network
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-sm" id="NetTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Category</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Postal Code</th>
                <th>Circuit ID</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat=" Net in Networks"  ng-dblclick="NetClick(Net);">
                <td>{[{Net.N_Number}]}</td>
                <td>{[{Net.N_Name}]}</td>
                <td>{[{Net.Category}]}</td>
                <td>{[{Net.address}]}</td>
                <td>{[{Net.Phone}]}</td>
                <td>{[{Net.Fax}]}</td>
                <td>{[{Net.Postal_Code}]}</td>
                <td>{[{Net.Circuit_ID}]}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class = "col-lg-4" >
    <div class="card mb-2">
      <div class="card-header">
        <i class="fa fa-table"></i> Network Chart
      </div>
      <div class="card-body">
        <div id="NetChart" style="width:100%; height: =100%" ></div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class = "col-lg-7" >
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> VLAN
        <button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#NewNetDevice"><i class="fa fa-plus" aria-hidden="true"></i> New</button>
      </div>
      <div class="card-body">
        <div class="table-responsive" >
          <table class="table table-striped table-hover table-sm" id="VlanTable" ng-table="VlanTable" width="100%" cellspacing="0" ui-jq="dataTable" ui-options="dataTableOpt">
            <thead>
              <tr>
                <th>#</th>
                <th>Number</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat=" vlan in vlans track by $index">
                <td>{[{vlan.id}]}</td>
                <td>{[{vlan.vlan_number}]}</td>
                <td>{[{vlan.Description}]}</td>
                <td>
                    <button class="btn btn-default btn-sm"  type="button" ng-click="selectVlan(vlan)" data-toggle="modal" data-target="#editVlan" ><i class="fa fa-pencil" aria-hidden="true"></i></button>
                    <button class="btn btn-danger btn-sm" type="button" ng-click="selectNetDevice(Net_Device)" data-toggle="modal" data-target="#DeleteNetDevice" ><i class="fa fa-trash" aria-hidden="true"></i></button>
                </td>
              </tr>
            </tbody>
            <!-- <tr ng-repeat="vlan in $data">
              <td data-title="'#'">{[{vlan.id}]}</td>
              <td data-title="Number">{[{vlan.vlan_number}]}</td>
              <td data-title="Description">{[{vlan.Description}]}</td>
              <td data-title="Action">
                  <button class="btn btn-default btn-sm"  type="button" ng-click="selectVlan(vlan)" data-toggle="modal" data-target="#editVlan" ><i class="fa fa-pencil" aria-hidden="true"></i></button>
                  <button class="btn btn-danger btn-sm" type="button" ng-click="selectNetDevice(Net_Device)" data-toggle="modal" data-target="#DeleteNetDevice" ><i class="fa fa-trash" aria-hidden="true"></i></button>
              </td>
            </tr> -->
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class = "col-lg-5" >
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> Category
        <button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#NewNetDevice"><i class="fa fa-plus" aria-hidden="true"></i> New</button>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-sm" id="CateTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>#</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat=" cate in Cates">
                <td>{[{cate.id}]}</td>
                <td>{[{cate.Category}]}</td>
                <td>
                    <button class="btn btn-default btn-sm"  type="button" ng-click="selectNetDevice(Net_Device)" data-toggle="modal" data-target="#EditNetDevice" ><i class="fa fa-pencil" aria-hidden="true"></i></button>
                    <button class="btn btn-danger btn-sm" type="button" ng-click="selectNetDevice(Net_Device)" data-toggle="modal" data-target="#DeleteNetDevice" ><i class="fa fa-trash" aria-hidden="true"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="editVlan" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Edit Network Device</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
                <div class="container col-sm-12">
                      <label for="vlan_number"><strong>Vlan Number</strong></label>
                      <input type="text" class="form-control" id="vlan_number" placeholder="Vlan Number" ng-model="selectedItem.vlan_number" disabled>
                    <label for="inputEmail3" ><strong>Description</strong></label>
                    <input type="text" class="form-control" id="inputEmail3" placeholder="Description" ng-model="selectedItem.Description">
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary mr-auto" data-dismiss="modal"ng-click="editVlan()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
          </div>
        </div>
      </div>
</div>
<script type="text/JavaScript" src="/js/dashboard/dashboard.js"></script>
