<div ng-controller="ReportTableContoller">
<ol class="breadcrumb">
	<li class="breadcrumb-item">
		<a href="#">Report</a>
	</li>
	<li class="breadcrumb-item active">Report Table</li>
</ol>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h1">Reports</h1>
</div>
<hr>
<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Reports
    {{#if isAuthenticated}}
    <button class="btn btn-primary btn-sm pull-right" type="button" data-toggle="modal" data-target="#NewWAN"><i class="fa fa-plus" aria-hidden="true"></i> New</button>
    {{/if}}
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-sm" id="repoTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Report Name</th>
            <th>ReportDate</th>
            <th>Created By</th>
            {{#if isAuthenticated}}
            <th>Action</th>
            {{/if}}
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="repo in Reports" ng-dblclick="RepoClick(repo);">
            <td>{[{$index+1}]}</td>
            <td>{[{repo.ReportName}]}</td>
            <td>{[{repo.ReportDate}]}</td>
            <td>{[{repo.user_id}]}</td>
            {{#if isAuthenticated}}
            <td>
               <button class="btn btn-default btn-sm"  type="button" ng-click="selectWAN(WAN)" data-toggle="modal" data-target="#EditWAN" ><i class="fa fa-pencil" aria-hidden="true"></i></button>
                <button class="btn btn-danger btn-sm" type="button" ng-click="selectWAN(WAN)" data-toggle="modal" data-target="#DeleteWAN" ><i class="fa fa-trash" aria-hidden="true"></i></button>
               </td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
<script type="text/JavaScript" src="/js/report/ReportTable.js"></script>
