<div ng-controller="ReportTableContoller">
<ol class="breadcrumb">
	<li class="breadcrumb-item">
		<a href="/Dashboard">Dashboard</a>
	</li>
	<li class="breadcrumb-item active">Report Table</li>
</ol>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2>Operation Report</h2>
			<h2 style="background-color:red;color:white; width: 237px; height: 40px; text-align: center;">CONFIDENTIAL</h2>
			<img src="/img/LDBLogo.png" width="200px">
</div>
<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Reports
    {{#if isAuthenticated}}
    <button class="btn btn-primary btn-sm pull-right" type="button" ng-click="newRepo()"><i class="fa fa-plus" aria-hidden="true" ></i> New</button>
    {{/if}}
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-sm" id="repoTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Report Name</th>
            <th>ReportDate</th>
            {{#if isAuthenticated}}
            <th>Action</th>
            {{/if}}
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="repo in Reports" ng-dblclick="RepoClick(repo);">
            <td>{[{$index+1}]}</td>
            <td>{[{repo.ReportName}]}</td>
            <td>{[{repo.ReportDate | date: 'yyyy-MM-dd'}]}</td>
            {{#if isAuthenticated}}
            <td>
            	<button class="btn btn-danger btn-sm" type="button" ng-click="selectReport(repo)" data-toggle="modal" data-target="#DeleteReport" ><i class="fa fa-trash" aria-hidden="true"></i></button>
            </td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="DeleteReport" class="modal fade" role="dialog" >
	<div class="modal-dialog modal-dialog-center">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Delete Report</h4>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
				<h3 style='color: red'>Confirm to Delete </h3>
				<h4 style='color: red'>{[{selectedReport.ReportName}]} </h4>
			</div>
			<div class="modal-footer">
			<button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="deleteRepo()">Confirm</button>
				<button type="button" class="btn btn-primary pull-right" data-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>
</div>
<script type="text/JavaScript" src="/js/report/ReportTable.js"></script>
